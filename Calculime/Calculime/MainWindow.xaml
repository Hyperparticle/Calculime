<Window x:Class="Calculime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculime" Height="496" Width="374" Icon="Resources/favicon.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" FocusManager.FocusedElement="{Binding ElementName=InputTextBox}">
        <ListView x:Name="HistoryListView" Height="140">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="History" Width="300" DisplayMemberBinding="{Binding Id}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap" Text="Output Here" Height="26"/>
        <TextBox Height="23" x:Name="InputTextBox" TextWrapping="Wrap" KeyDown="InputTextBox_KeyDown"/>
        <Grid Height="218">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button x:Name="SevenButton" Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Click="NumberButton_Click"/>
            <Button x:Name="EightButton" Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="1" Click="NumberButton_Click"/>
            <Button x:Name="NineButton" Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="2" Click="NumberButton_Click"/>
            <Button x:Name="DeleteButton" Content="DEL" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="3" Click="DeleteButton_Click"/>
            <Button x:Name="ClearButton" Content="AC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="4" Click="ClearButton_Click"/>
            <Button x:Name="FourButton" Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Row="1" Click="NumberButton_Click"/>
            <Button x:Name="FiveButton" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="1" Grid.Row="1" Click="NumberButton_Click"/>
            <Button x:Name="SixButton" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="2" Grid.Row="1" Click="NumberButton_Click"/>
            <Button x:Name="MultiplyButton" Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="3" Grid.Row="1" Click="OperationButton_Click"/>
            <Button x:Name="DivideButton" Content="/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="4" Grid.Row="1" Click="OperationButton_Click"/>
            <Button x:Name="OneButton" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Row="2" Click="NumberButton_Click"/>
            <Button x:Name="TwoButton" Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="1" Grid.Row="2" Click="NumberButton_Click"/>
            <Button x:Name="ThreeButton" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="2" Grid.Row="2" Click="NumberButton_Click"/>
            <Button x:Name="AddButton" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="3" Grid.Row="2" Click="OperationButton_Click"/>
            <Button x:Name="SubtractButton" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="4" Grid.Row="2" Click="OperationButton_Click"/>
            <Button x:Name="ZeroButton" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Row="3" Click="NumberButton_Click"/>
            <Button x:Name="DecimalButton" Content="." HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="1" Grid.Row="3" Click="NumberButton_Click"/>
            <Button x:Name="PowerButton" Content="^" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="2" Grid.Row="3" Click="OperationButton_Click"/>
            <Button x:Name="AnswerButton" Content="ANS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="3" Grid.Row="3"/>
            <Button x:Name="EqualsButton" Content="=" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="54" Grid.Column="4" Grid.Row="3" Click="CalculateButton_Click"/>
        </Grid>
    </StackPanel>

</Window>
